.container{background-color: #fff;}
.search_top{width: 100%; border-top: 1rpx solid #f1f1f1; background-color: #fff; border-bottom: 1rpx solid #f1f1f1; padding: 30rpx 0; position: fixed; left: 0; top: 0; z-index: 2;}
.search_top .search_icon{ width: 40rpx; height: 40rpx; float: left; margin:8rpx 36rpx 0 36rpx;}
.search_top .search_input{width: 602rpx; height: 40rpx; line-height: 40rpx; margin-right: 36rpx;}

.search_list{ width: 100%; height: 90.6vh; float: left; margin-top: 9.4vh;}
.search_list .search_li{padding: 30rpx 36rpx 30rpx 76rpx; position: relative; border-bottom: 1rpx solid #f1f1f1; }
.search_list .search_li::before{content: ''; width: 24rpx; height: 24rpx; position: absolute; left: 36rpx; top: 50%; transform: translateY(-50%); -webkit-transform: translateY(-50%); border-radius: 50%;}
.search_list .R_icon::before{background: url('http://maplezhuang.web3v.com/hycx/image/R_icon.png') no-repeat center center /100%}
.search_list .Z_icon::before{background: url('http://maplezhuang.web3v.com/hycx/image/Z_icon.png') no-repeat center center /100%}
.search_list .search_li .addName{height: 44rpx; overflow: hidden; font-size:36rpx; line-height: 44rpx; color:#595959}
.search_list .search_li .addInfo{height: 44rpx; overflow: hidden; font-size:30rpx; line-height: 44rpx; color:#b2b2b2}