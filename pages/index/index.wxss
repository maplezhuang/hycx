/**index.wxss**/
/* 共享车 */
.share-car{
  padding: 100rpx 20rpx 20rpx 20rpx;
}
.share-car .share-box{
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 5rpx #ccc;
  margin-bottom: 20rpx;
}
.share-car .share-box .item{
  padding-left: 30rpx;
  position: relative;
}
.share-car .share-box .item .s-icon{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.share-car .goBtn{width: 100%; height: 80rpx; background-color: #48acf7; font-size:28rpx; line-height: 80rpx; text-align: center; color:#fff; border-radius: 0; padding: 0;}

/* 网约车 */
.xMap{ width: 100%; height: 70vh; position: relative; top: 41px}
.xMap .csdw{width: 32px; height: 32px; position: absolute; left: 20rpx; bottom: 20rpx;}
.xMap .csdw image{width: 100%; height: 100%;}
.xMap .markerStart{width: 30px; height: 44px; position: absolute; left: 50%; bottom: 50%; margin-top: -22px; margin-left: -15px;}
.xMap .markerStart image{width: 100%; height: 100%;}
.xMap .markerEnd{width: 30px; height: 44px; position: absolute; left: 50%; bottom: 50%; margin-top: -22px; margin-left: -15px; display: none;}
.xMap .markerEnd image{width: 100%; height: 100%;}
.xMap .goToBack{width: 70rpx; height: 70rpx; position: absolute; left: 20rpx; top: 40rpx;}

.tabs-item{ width: 100%; height: 80rpx; background-color: #fff; position: fixed; top: 0; left: 0; z-index:999; box-shadow: 0 5px 10px #e0e0e0;}
.tabs-item .tabs-item-li{ width: 25%; display: table; text-align: center; font-size:14px; line-height: 80rpx; color:#000; float: left;}
.tabs-item .active{ color:#fca26e}

.xContent{ width: 100%; height: auto; background-color: #fff; position: fixed; bottom: 0;  left: 0; z-index: 999; padding-bottom: 10rpx;}
.xContent .user-info{padding: 0 40rpx; font-size: 22rpx; line-height: 54rpx; color:#98999e; border-bottom: 1px solid #f5f5f5;}
.xContent .user-info .names{float: left; margin-right: 15rpx;}

.xContent .category{ display: table; margin: 20rpx auto 0;}
.xContent .wyc{width: 130rpx;}
.xContent .jshcz{width: 196rpx;}
.xContent .options{ float: left; margin: 0 14rpx; font-size:30rpx; line-height: 60rpx; text-align: center; border-radius: 40rpx; border: 2rpx solid #fff;}
.xContent .options.active{border: 2rpx solid #d8d8d8; }
.xContent .chooseTime{display: table; margin: 5px auto 0; font-size:12px; line-height: 30px; text-align: center;}
.xContent .chooseTime picker{float: left; margin: 0 20rpx;}
.xContent .time-picker{font-size:30rpx; line-height: 60rpx;}
.xContent .inputText{height: 80rpx; padding: 0 40rpx; position: relative;}
.xContent .inputText .icon{content:''; width: 6px; height: 6px; border-radius: 50%; background-color: #000; display: block; position: absolute; left: 20px; top: 50%; transform: translateY(-50%);}
.xContent .inputText .xx{width: 640rpx; height: 80rpx; float: left; overflow: hidden; font-size:14px; line-height: 80rpx; color:#4b4c60; margin-left: 35rpx; position: relative; border-bottom: 1px solid #f5f5f5;}
.xContent .inputText:last-child .xx{ border-bottom: 0rpx;}
.xContent .nowAdd .icon{background-color: #22c49f;}
.xContent .goAdd .icon{background-color: #ff8c44;}
.xContent .goBtn{width: 100%; height: 50px; position: fixed; left: 0; bottom: 0;}
.xContent .goBtn button{background-color: #4b4c60; font-size:16px; line-height: 50px; text-align: center; color:#fff; border-radius: 0; padding: 0;}
